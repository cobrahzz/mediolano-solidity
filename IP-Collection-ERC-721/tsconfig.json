{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "mocha", "chai", "hardhat"],
    "skipLibCheck": true
  },
  "include": [
    "hardhat.config.ts",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "typechain-types/**/*.ts"
  ]
}
